<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestXamarin.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Datum:" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Small"/>
        <Label Text="Hautfeuchtigkeit:" FontSize="Medium" />
        <Label Text="{Binding Description, StringFormat='{0} %'}" FontSize="Small"/>
        <Image WidthRequest="100" HeightRequest="200" x:Name="PhotoImage" Source="{Binding Photo}" />
    </StackLayout>
    
</ContentPage>